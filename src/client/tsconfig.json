{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "images.d.ts"],
  },
  "include": [
    "components",
    "pages",
    "images.d.ts",
    "context",
    "api",
    "hooks"
  ],
  "exclude": [
    "../../node_modules"
  ]
}
